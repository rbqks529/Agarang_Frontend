<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Memory.PicAssociationFragment"
    android:background="#F4F1EC">

    <FrameLayout
        android:id="@+id/fl_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24.75dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="79.23dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24.75dp">

        <ImageView
            android:id="@+id/iv_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_circle"
            />

        <ImageView
            android:id="@+id/iv_baby_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baby_tiger"
            android:layout_gravity="center"/>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_question_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘은 어떤 추억을 가지고 왔어?"
        android:fontFamily="@font/pretendard500"
        android:textColor="#1A000000"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="432.07dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_question_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 주제는 소풍이네!\n소풍에서 가장 즐거웠던 게 뭐였어?"
        android:textAlignment="center"
        android:fontFamily="@font/pretendard500"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_question_main"
        android:layout_marginTop="22.33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <ImageView
        android:id="@+id/iv_record_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_record_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="627.34dp"
        />

    <ImageView
        android:id="@+id/iv_record_arrow_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_record_arrow_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="627.34dp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/iv_record_cancle_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_record_cancle_btn"
        app:layout_constraintEnd_toStartOf="@id/iv_record_arrow_btn"
        android:layout_marginEnd="11.66dp"
        app:layout_constraintTop_toTopOf="@id/iv_record_arrow_btn"
        app:layout_constraintBottom_toBottomOf="@id/iv_record_arrow_btn"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/iv_record_ing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_record_ing"
        app:layout_constraintBottom_toTopOf="@id/iv_record_arrow_btn"
        app:layout_constraintStart_toStartOf="@id/iv_record_arrow_btn"
        app:layout_constraintEnd_toEndOf="@id/iv_record_arrow_btn"
        android:layout_marginBottom="9.6dp"
        android:visibility="gone"
        />



    <ImageView
        android:id="@+id/iv_recording_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_recording_next_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="627.79dp"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>