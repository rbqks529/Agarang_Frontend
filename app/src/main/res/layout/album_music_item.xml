<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/music_image_sample"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="노래 제목"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/iv_item_cover"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="11dp"
        android:layout_marginTop="24dp"/>
    <TextView
        android:id="@+id/tv_item_tag_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="태그1 "
        app:layout_constraintTop_toBottomOf="@id/tv_item_title"
        app:layout_constraintStart_toEndOf="@id/iv_item_cover"
        android:layout_marginStart="11dp"
        android:textColor="#737373"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/tv_item_tag_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="태그2"
        app:layout_constraintTop_toBottomOf="@id/tv_item_title"
        app:layout_constraintStart_toEndOf="@id/tv_item_tag_1"
        android:textColor="#737373"
        android:textSize="12sp"/>
    <ImageView
        android:id="@+id/iv_item_heart_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_heart_gray_empty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="29dp"/>

    <ImageView
        android:id="@+id/iv_item_heart_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_heart_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="29dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_item_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iv_music_option"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="18dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>