<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#F5F5F5"
    tools:context=".Setting.ChangeCharFragment">

    <TextView
        android:id="@+id/tv_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="캐릭터 변경"
        android:textSize="12sp"
        android:textColor="#818181"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="9dp"/>

    <GridView
        android:id="@+id/gv_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_change"
        android:numColumns="2"
        android:columnWidth="162dp"
        android:horizontalSpacing="12.29dp"
        android:verticalSpacing="10.29dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:scrollbars="vertical"/>

    <ImageView
        android:id="@+id/finish_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bt_finish_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>